<Page
    x:Class="CelestiaUWP.InfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Margin="16" Spacing="8">
        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" x:Name="NameLabel"/>
        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="DetailLabel"/>
        <HyperlinkButton x:Name="LinkButton" Margin="0,8,0,8" Padding="0"/>
    </StackPanel>
</Page>
