<ContentDialog
    x:Class="CelestiaUWP.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="">

    <StackPanel Orientation="Vertical" Spacing="{StaticResource VerticalSpacing}">
        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" x:Name="VersionLabel"/>
        <HyperlinkButton x:Name="LinkButton" Content="https://celestia.mobi" Margin="0" Padding="0" NavigateUri="https://celestia.mobi"/>
        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="AuthorTitleLabel"/>
        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="AuthorLabel" TextWrapping="Wrap"/>
        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="TranslatorTitleLabel"/>
        <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="TranslatorLabel" TextWrapping="Wrap"/>
    </StackPanel>
</ContentDialog>
