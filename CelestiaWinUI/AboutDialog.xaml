<ContentDialog
    x:Class="CelestiaWinUI.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="">

    <StackPanel Orientation="Vertical" Spacing="{StaticResource VerticalSpacing}">
        <Image Source="/Assets/StoreLogo.png" Width="96" Height="96" HorizontalAlignment="Center"/>
        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" x:Name="VersionLabel" HorizontalAlignment="Center"/>
        <HyperlinkButton x:Name="LinkButton" Content="https://celestia.mobi" Margin="0" Padding="0" NavigateUri="https://celestia.mobi" HorizontalAlignment="Center"/>
    </StackPanel>
</ContentDialog>
